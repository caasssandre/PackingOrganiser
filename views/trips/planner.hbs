<a class="button" href="#newTrip">Plan a new trip</a>
<div id="newTrip" class="overlay">
  <div class="popup">
    <h2>My pack</h2>
    <a class="close" href="#">&times;</a>
    <div>
      <form action='/planner' method='post'>
        <div>
          <label for="destination">
            Destination
            <input type="text" name="destination" id="">
          </label>
        </div>
        <div>
          <label for="activity">
            Activity
            <select id = "myList" name = "activity">
              {{#each this}}
                <option value = "{{title}}">{{title}}</option>
              {{/each}}
             </select>
          </label>
        </div>
        <div>
          <label for="psrtySize">
            Party size
            <input type="text" name="partySize" id="">
          </label>
        </div>
        <div>
          <label for="date">
            Date
            <input type="text" name="date" id="">
          </label>
        </div>
        <div>
          <button class="button">Create</button>
        </div>
      </form>
    </div>
  </div>
</div>